# ===========================
# Development Environment Configuration
# Used for local development & testing
# ===========================

# ===========================
# Application Environment
# ===========================
ENVIRONMENT=development
LOG_LEVEL=debug

# ===========================
# Grafana Configuration
# ===========================
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin@123
GF_ADMIN_EMAIL=dev@localhost

GF_DOMAIN=localhost
GF_ROOT_URL=http://localhost:3000

GF_SECURITY_ADMIN_PASSWORD_RESET_LINK_ENABLED=true
GF_USERS_ALLOW_SIGN_UP=false
GF_DISABLE_SANITIZE_HTML=false

# ===========================
# SMTP Configuration (Disabled in dev)
# ===========================
GF_SMTP_ENABLED=false

# ===========================
# Slack Webhook (Disabled in dev)
# ===========================
SLACK_WEBHOOK_URL=

# ===========================
# Telegram Bot (Disabled in dev)
# ===========================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================
# OpenTelemetry Collector Settings
# ===========================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# ===========================
# Prometheus Settings
# ===========================
PROMETHEUS_RETENTION_DAYS=7
PROMETHEUS_MAX_SAMPLES=500000

# ===========================
# Loki Settings
# ===========================
LOKI_RETENTION_DAYS=7
LOKI_MAX_STREAMS_PER_USER=5000

# ===========================
# Tempo Settings
# ===========================
TEMPO_RETENTION_DAYS=7
TEMPO_MAX_TRACES=5000

# ===========================
# Security & TLS Configuration
# ===========================
TLS_ENABLED=false

# ===========================
# Monitoring Alerting Thresholds (Relaxed for dev)
# ===========================
CPU_THRESHOLD=90
MEMORY_THRESHOLD=90
DISK_THRESHOLD=90
ERROR_RATE_THRESHOLD=0.1
LATENCY_THRESHOLD_MS=2000
