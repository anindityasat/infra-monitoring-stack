# ===========================
# Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# and update values accordingly
# ===========================

# ===========================
# Application Environment
# ===========================
ENVIRONMENT=development
LOG_LEVEL=debug

# ===========================
# Grafana Configuration
# ===========================
# Default admin user credentials
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
GF_ADMIN_EMAIL=admin@example.com

# Domain and access URL
GF_DOMAIN=localhost
GF_ROOT_URL=http://localhost:3000

# Security settings
GF_SECURITY_ADMIN_PASSWORD_RESET_LINK_ENABLED=false
GF_USERS_ALLOW_SIGN_UP=false
GF_DISABLE_SANITIZE_HTML=false

# ===========================
# SMTP Configuration (Email Alerts)
# ===========================
GF_SMTP_ENABLED=false
GF_SMTP_HOST=smtp.gmail.com
GF_SMTP_PORT=587
GF_SMTP_USER=your-email@gmail.com
GF_SMTP_PASSWORD=your-app-password
GF_SMTP_FROM_ADDRESS=monitoring@example.com
GF_SMTP_FROM_NAME=Monitoring Stack

# ===========================
# Slack Webhook (Optional - for alerts)
# ===========================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================
# Telegram Bot (Optional - for alerts)
# ===========================
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# ===========================
# OpenTelemetry Collector Settings
# ===========================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# ===========================
# Prometheus Settings
# ===========================
PROMETHEUS_RETENTION_DAYS=30
PROMETHEUS_MAX_SAMPLES=1000000

# ===========================
# Loki Settings
# ===========================
LOKI_RETENTION_DAYS=30
LOKI_MAX_STREAMS_PER_USER=10000

# ===========================
# Tempo Settings
# ===========================
TEMPO_RETENTION_DAYS=30
TEMPO_MAX_TRACES=10000

# ===========================
# Security & TLS Configuration
# ===========================
TLS_ENABLED=false
TLS_CERT_PATH=/etc/certs/cert.pem
TLS_KEY_PATH=/etc/certs/key.pem

# ===========================
# Monitoring Alerting Thresholds
# ===========================
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=85
ERROR_RATE_THRESHOLD=0.05
LATENCY_THRESHOLD_MS=1000

